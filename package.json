{
  "name": "nextjs-shadcn-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "bun run db:generate",
    "vercel-build": "prisma generate --schema=./src/db/postgresql/schema.prisma && prisma generate --schema=./src/db/mysql/schema.prisma && next build",
    "db:pg:generate": "prisma generate --schema=./src/db/postgresql/schema.prisma",
    "db:pg:push": "prisma db push --schema=./src/db/postgresql/schema.prisma",
    "db:pg:pull": "prisma db pull --schema=./src/db/postgresql/schema.prisma",
    "db:pg:migrate": "prisma migrate dev --schema=./src/db/postgresql/schema.prisma",
    "db:pg:studio": "prisma studio --schema=./src/db/postgresql/schema.prisma",
    "db:mysql:generate": "prisma generate --schema=./src/db/mysql/schema.prisma",
    "db:mysql:pull": "prisma db pull --schema=./src/db/mysql/schema.prisma",
    "db:mysql:studio": "prisma studio --schema=./src/db/mysql/schema.prisma",
    "db:generate": "bun run db:pg:generate && bun run db:mysql:generate",
    "db:pull": "bun run db:pg:pull && bun run db:mysql:pull",
    "db:migrate": "bun run db:pg:migrate && bun run db:mysql:migrate"
  },
